
<%-include("header") -%>
<div class="box" id="heading">
  <h1><%=  tittleOfList %></h1>
</div>

<div class="box" >
    <% allItimes.forEach( (item) =>  { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="hidden" name="listName" value="<%=  tittleOfList %>">
        <input type="checkbox" onChange="this.form.submit()" name="deleteItem" value= "<%= item._id %>" >
          <p><%= item.name %></p>
        </div>
      </form>
    <%  } );%>
    <form class="item" action="/" method="post">
      <input type="text" name="newListItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="listName" value=<%= tittleOfList%>>+</button>
    </form>
</div>
<%-include("footer") -%>
